<div class="text-success">
  <%= flash[:notice] %>
</div>

<h1 style="font-weight: bold">
  Books
</h1>

<table>
  <thead>
    <th>
      Title
    </th>
    <th>
      Body
    </th>
    <th colspan="3">
      
    </th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2 style="font-weight: bold">
  New book
</h1>

<% if @book.errors.any? %>
  <div class="error-box">
    <%= @book.errors.count %> error(s) occurred.
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <div class="action_field">
    <label><span>Title</span> <%= f.text_field :title %></label>
  </div>
  <div class="action_field">
    <label><span>Body</span> <%= f.text_area :body %></label>
  </div>
  <div class="action_submit">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>