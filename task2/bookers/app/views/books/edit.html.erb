<h1 style="font-weight: bold">
  Editing book
</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors occurred.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :put do |f| %>
  <div class="action_field">
    <label>Title <%= f.text_field :title %></label>
  </div>
  <div class="action_field">
    <label>Body <%= f.text_area :body %></label>
  </div>
  <div class="action_submit">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>


<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>