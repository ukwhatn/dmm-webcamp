<div class="my-5">
  <h2>
    New book
  </h2>
  <%= form_with model: new_book do |f| %>
    <div class="form-group">
      <label for="newBookTitle">Title</label>
      <%= f.text_field :title, class: "form-control", id: "newBookTitle" %>
    </div>
    <div class="form-group">
      <label for="newBookOpinion">Opinion</label>
      <%= f.text_area :body, class: "form-control", id: "newBookOpinion" %>
    </div>
    <%= f.submit "Create Book", class: "btn btn-primary" %>
  <% end %>
 </div>