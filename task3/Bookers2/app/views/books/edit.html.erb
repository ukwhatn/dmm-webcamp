

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8">
      <h2>
        Editing Book
      </h2>
      
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="bookTitle">Title</label>
          <%= f.text_field :title, class: "form-control", id: "bookTitle" %>
        </div>
        <div class="form-group">
          <label for="bookOpinion">Opinion</label>
          <%= f.text_field :body, class: "form-control", id: "bookOpinion" %>
        </div>
        <%= f.submit "Update Book", class: "btn btn-primary" %>
      <% end %>
      <ul>
        <li><%= link_to "Show", book_path(@book.id) %></li>
        <li><%= link_to "Back", books_path %></li>
      </ul>
    </div>
  </div>
</div>